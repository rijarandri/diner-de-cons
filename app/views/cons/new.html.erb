
<h1 class="title mt-4 mb-4">Créez votre propre con !</h1>

  <div class="d-flex align-items-center justify-content-center">
  <div class="bg-white p-4 rounded-4" style="max-width: 400px;">
    <%= simple_form_for @con do |f| %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Photos" %>
      <%= f.input :name, label: "Nom" %>
      <%= f.input :category, collection: ["con de droite", "chroniqueur france inter", "mysogine", "beauf", "supporter de foot", "zadiste", "influenceur", "avocat fiscaliste", "conspirationniste", "Pascal Praud"], label: "Catégorie" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :price, label: "Prix" %>
      <%= f.button :submit, "Je crée mon con", class:"btn btn-success rounded-4 text-white" %>
    <% end %>
  </div>
  </div>


