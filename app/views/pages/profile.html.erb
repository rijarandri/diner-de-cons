<div class="reservations-profile">

<%# je n'arrive pas à shuffle un autre con %>
  <div class="user-reservations">
    <h2> Mes réservations</h2> <br>
    <% @bookings.each do |booking| %>
      <div class="accordion accordion-flush" id="accordionFlushExample">
        <div class="accordion-item">
          <% if booking.date > Date.today %>
            <h2 class="accordion-header">
              <button class="accordion-button collapsed text-success" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                <%= booking.con.name %>
              </button>
            </h2>
          <% else %>
            <h2 class="accordion-header">
            <button class="accordion-button collapsed  text-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                <%= booking.con.name %>
              </button>
            </h2>
          <% end %>
            <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                <p><%= booking.date %></p>
              </div>
            </div>
        </div>
      </div>

      <% end %>


        <div>
        <%= link_to "Accepter ma réservation", "#", class:"btn btn-success mt-4 rounded-4 mb-4"%>
        </div>
        <div>
          <%= link_to "Refuser ma réservation", "#", class:"btn btn-danger mt-4, rounded-4" %>
        </div>
        <div>
          <%= link_to "Créer un con", "#", class:"btn btn-success mt-4, rounded-4 mt-4" %>
        </div>
  </div>



<div class="mes-cons">
  <% @user.cons.each do |con| %>
  <div class="mes-cards-cons">
        <% if con.photos.attached? %>
          <% con.photos.each do |photo| %>
            <img src="<%= cl_image_path(con.photos.first.key, height: 100, width: 100) %>" class="card-img-top" alt="Photo de <%= con.name %>">
          <% end %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= con.name %></h5>
          <p class="card-text"><strong>Description :</strong> <%= truncate(con.description, length: 25) %></p>
          <p class="card-text"><strong>Catégorie:</strong> <%= con.category %></p>
          <p class="card-text"><strong>Prix:</strong> <%= con.price %> €</p>
        </div>
      </div>
  <% end %>
</div>
</div>
